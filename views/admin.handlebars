<script type="text/javascript">
$(() => {
   $(document).ready(function()
   {
       $('.modal').addClass('is-active');
   });
   
   

   $('#login').click((e) => {
       e.preventDefault();
       var userName = $('#userName').val();
       var password = $('#pswd').val();
       console.log("goodbye", userName, password);
       if(userName === "admin" && password === "1234") {

           $('.modal').removeClass('is-active');
       } else {
           alert("Invalid Credentials");
       }
   });

   
});
</script>

<div class="modal">
    <div class="modal-background"></div>
    <div class="modal-content">
        <div class="box">
            <div class="field">
                <h1>Administrator Only</h1>
                <p class="control has-icons-left has-icons-right">
                    <input class="input" id="userName" type="text" placeholder="Username">
                    <span class="icon is-small is-left">
                        <i class="fas fa-envelope"></i>
                    </span>
                    <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                    </span>
                </p>
            </div>
            <div class="field">
                <p class="control has-icons-left">
                    <input class="input" id="pswd" type="text" placeholder="Password">
                    <span class="icon is-small is-left">
                        <i class="fas fa-lock"></i>
                    </span>
                </p>
            </div>
            <div class="field">
                <p class="control">
                    <button class="button is-success" id="login">
                        Login
                    </button>
                </p>
            </div>
            <button class="modal-close is-large" aria-label="close"></button>
        </div>
    </div>
</div>

<section class="section">
    <div class="container">

        {{#each trips}}
        <div class="card">
            <div class="card-content">
                <div class="media">
                    <div class="media-content">
                         <p class="title is-4">{{this.dataValues.name}}</p>
                    </div>
                </div>
                    
            </div>
            <footer class="card-footer">
                <p class="card-footer-item">
                     <button id="delete" linkId="{{this.dataValues.id}}">Delete Trip</button>
                </p>
            </footer>
        </div>
        <br>
        {{/each}}
    </div>
        
</section>